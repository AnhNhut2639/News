<div class="mag-login-area py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-6">
                <div class="login-content bg-white p-30 box-shadow">
                    <!-- Section Title -->
                    <div class="section-heading">
                        <h5>Thay đổi mật khẩu</h5>
                    </div>

                    {{#if success}}
                    <div class="alert alert-success" role="alert">
                        {{success}}. <a href="{{link}}">Đăng nhập <i class="fa fa-forward"></i></a>
                    </div>
                    {{/if}}

                    <form action="/login/changepass" method="post">
                        <div class="form-group">
                            <input type="password" class="form-control" name="newPassword" id="exampleInputEmail1"
                                placeholder="Mật khẩu mới">
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" name="confirmNewPassword"
                                id="exampleInputPassword1" placeholder="Xác nhận lại mật khẩu">
                        </div>


                        {{#if errConfirm}}
                        <div class="alert alert-danger" role="alert">
                            {{errConfirm}}
                        </div>
                        {{/if}}


                        <button type="submit" class="btn mag-btn mt-30">Xác nhận</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>