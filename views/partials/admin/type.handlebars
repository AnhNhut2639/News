<div class="section-heading">
    <h5>Thể Loại</h5>
</div>

<form class="form-inline" action="/admin/type/search" method="GET">
    <div class="form-group mx-sm-3 mt-3">
        <input type="text" class="form-control" name="search" placeholder="Nhập nội dung tìm kiếm">
    </div>
    <button type="submit" class="btn btn-primary btn-lg"><i class="fa fa-search"></i></button>
</form>
{{#each message}}
<div class="alert alert-danger" role="alert">
    {{this.error}}
</div>
{{/each}}
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">STT</th>
            <th scope="col">Thể Loại</th>
            <th scope="col">Vị Trí</th>
            <th scope="col">Sửa</th>
            <th scope="col"></th>
            <th scope="col"> Xóa</th>


        </tr>
    </thead>
    <tbody>
        {{#each types}}
        <tr>
            <th scope="row">{{this.STT}}</th>
            <td scope="row">{{this.Type}}</td>
            <td scope="row">{{this.position}}</td>
            <td colspan="2">
                <!-- Button trigger modal -->
                <a href="updateType/{{this.id}}"> <button type="button" class="btn btn-primary" data-toggle="modal"
                        data-target="#exampleModalCenter">
                        <i class="fa fa-edit"></i>
                    </button></a>
            </td>

            <td>
                <a href="deleteType/{{this.id}}"> <button type="button" class="btn btn-primary" data-toggle="modal"
                        data-target="#exampleModalCenter"><i class="fa fa-trash"></i></button></a>


            </td>
        </tr>
        {{/each}}

    </tbody>
</table>




<div class="section-heading">
    <h5> Thêm Thể Loại</h5>
</div>
<form action="" method="POST">
    <div class="form-group">
        <label>Thể Loại</label>
        <input type="text" class="form-control" name="addType">
    </div>

    <button type="submit" class="btn btn-info">Thêm Thể Loại</button>

</form>
