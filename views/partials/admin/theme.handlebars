<div class="section-heading">
    <h5>Chủ Đề</h5>
</div>
<form class="form-inline" action="/admin/theme/search" method="GET">
    <div class="form-group mx-sm-3 mt-3">
        <input type="text" class="form-control" name="search" placeholder="Nhập nội dung tìm kiếm">
    </div>
    <button type="submit" class="btn btn-primary btn-lg"><i class="fa fa-search"></i></button>
</form>
{{#if message}}
<div class="alert alert-danger" role="alert">
    {{message}}
</div>
{{/if}}
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">STT</th>
            <th scope="col">Chủ Đề</th>
            <th scope="col">Thể Loại</th>
            <th scope="col">Sửa</th>
            <th scope="col"></th>
            <th scope="col"> Xóa</th>
        </tr>
    </thead>
    <tbody>
        {{#each themes}}
        <tr>
            <th scope="row">{{this.STT}}</th>
            <td colspan="2">{{this.theme}}</td>

            <td colspan="2">
                <!-- Button trigger modal -->
                <a href="update/{{this.id}}"> <button type="button" class="btn btn-primary">
                        <i class="fa fa-edit"></i>
                    </button></a>
            </td>
            <td><a href="deleteTheme/{{this.id}}"> <button type="button" class="btn btn-primary"><i
                            class="fa fa-trash"></i></button></a></td>
        </tr>
        {{/each}}
    </tbody>
</table>

<div class="section-heading">
    <h5> Thêm Chủ Đề</h5>
</div>

<form action="" method="post">

    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <label class="input-group-text" for="typeSelect">Thể Loại</label>
        </div>
        <select class="custom-select" id="typeSelect" name="typeSelected" required="true">
            <option selected>Choose...</option>
            {{#each types}}
            <option value="{{this.id}}">{{this.type}}</option>
            {{/each}}
        </select>
    </div>
    <div class="form-group">
        <label>Chủ Đề</label>
        <input type="text" class="form-control" name="addTheme">
    </div>

    <button type="submit" class="btn btn-info">Thêm Chủ Đề</button>

</form>