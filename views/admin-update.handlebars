<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card card-signin my-5">
                {{#each theme}}
                <div class="card-body">

                    <h5 class="card-title text-center">Cập nhật chủ đề</h5>



                    <form class="form-signin" action="" method="post" enctype="multipart/form-data">

                        <div class="form-label-group">
                            <input type="text" class="form-control" name="id" style="color: #333;"
                                value="{{this.theme}}" disabled>
                        </div>

                        <div class="form-label-group">
                            <input type="text" class="form-control" autofocus name="newNameTheme" style="color:#333;"
                                placeholder="Tên mới" required="true">
                        </div>
                        <div>
                            <p>Hình</p><img src="{{this.img}}" alt="">
                        </div>
                        <div class="form-group">
                            <label for="avatar2">Thay đổi hình ảnh </label>
                            <input type="file" class="form-control-file" name="avatarChanged" id="avatar2">
                        </div>
                        <button class="btn btn-lg btn-primary btn-block text-uppercase" data-toggle="modal"
                            data-target="#exampleModalCenter" type="submit">Cập Nhật</button>
                    </form>



                </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>